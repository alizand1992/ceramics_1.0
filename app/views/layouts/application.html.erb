<!DOCTYPE html>
<html>
  <head>
    <title>Ceramics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Ceramics</a>
      <button
          class="navbar-toggler" type="button" data-toggle="collapse"
          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
          aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Photos", photos_path, class: "nav-link" %>
          </li>
        </ul>
      </div>

      <div class="collapse navbar-collapse" id="user">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= form_tag destroy_user_session_path, method: :delete do %>
                <%= submit_tag :logout, class: "btn btn-danger" %>
              <% end %>
            <% else %>
              <%= link_to "Log In", new_user_session_path, class: "btn btn-success" %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <br />

    <%= yield %>
  </body>
</html>
